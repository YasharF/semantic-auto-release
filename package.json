{
  "name": "@yasharf/semantic-auto-release",
  "version": "3.4.1",
  "description": "Automated release workflow for JavaScript projects using semantic-release, Conventional Commits, and changelog updates.",
  "keywords": [
    "automation",
    "changelog",
    "commitlint",
    "conventional-commits",
    "github-actions",
    "npm-publish",
    "semantic-release"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YasharF/semantic-auto-release.git"
  },
  "license": "BSD-3-Clause",
  "author": "Yashar Fakhari",
  "exports": {
    "./commitlint": "./commitlint.config.js",
    "./release": "./release.config.js",
    "./conventional-commits": "./.husky/commit-msg"
  },
  "main": "index.js",
  "files": [
    "commitlint.config.js",
    "release.config.js",
    "plugins/export-release-data.js"
  ],
  "scripts": {
    "prepare": "husky",
    "prettier:check": "prettier --check \"**/*.{js,ts,md,yml,sh}\" .github/*",
    "prettier:write": "prettier --write \"**/*.{js,ts,md,yml,sh}\" .github/*",
    "test": "mocha --require sinon 'test/**/*.test.js'",
    "test-coverage": "c8 --all --include=**/*.js --reporter=lcov --reporter=text npm test"
  },
  "lint-staged": {
    "**/*.{js,yml,md,sh}": "prettier --check",
    ".github/*": "prettier --check"
  },
  "dependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@octokit/rest": "^22.0.1",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "semantic-release": "^25.0.2"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "chai": "^6.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
    "prettier": "^3.7.4",
    "prettier-plugin-sh": "^0.18.0",
    "sinon": "^21.0.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
