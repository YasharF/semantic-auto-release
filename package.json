{
  "name": "@yasharf/semantic-auto-release",
  "version": "0.0.2",
  "description": "Automated release workflow for JavaScript/TypeScript projects using semantic-release, Conventional Commits, and changelog updates.",
  "main": "index.js",
  "exports": {
    "./commitlint.config": "./commitlint.config.js",
    "./release.config": "./release.config.js"
  },
  "types": "index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/sinonjs/samsam.git"
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --check",
    "*.js": "eslint"
  },
  "scripts": {
    "lint": "eslint . ",
    "prettier:check": "prettier --check '**/*.{js, md, yml}'",
    "prettier:write": "prettier --write '**/*.{js, md, yml}'",
    "version": "changes --commits --footer",
    "postversion": "git push --follow-tags && npm publish --access public",
    "prepare": "husky",
    "test": "echo \"No tests yet\""
  },
  "author": "Yashar Fakhari",
  "license": "BSD-3-Clause",
  "keywords": [
    "semantic-release",
    "conventional-commits",
    "commitlint",
    "automation",
    "changelog",
    "npm-publish",
    "github-actions"
  ],
  "dependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.4",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "semantic-release": "^24.2.7"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2"
  }
}
