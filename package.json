{
  "name": "@yasharf/semantic-auto-release",
  "version": "0.0.2",
  "description": "Automated release workflow for JavaScript/TypeScript projects using semantic-release, Conventional Commits, and changelog updates.",
  "license": "BSD-3-Clause",
  "author": "Yashar Fakhari",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yasharf/semantic-auto-release.git"
  },
  "exports": {
    "./commitlint.config": "./commitlint.config.js",
    "./release.config": "./release.config.js"
  },
  "main": "index.js",
  "files": [
    ".github/workflow/lint_pr.yml",
    ".github/workflows/ci_auto_release.yml",
    ".github/workflows/semantic_auto_release.yml",
    ".husky/commit-msg",
    "commitlint.config.js",
    "release.config.js"
  ],
  "scripts": {
    "prepare": "husky",
    "prettier:check": "prettier --check **/*.{js,md,yml} .github/*",
    "prettier:write": "prettier --write **/*.{js,md,yml} .github/*",
    "test": "echo \"No tests yet\""
  },
  "dependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.4",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "semantic-release": "^24.2.7"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2"
  },
  "keywords": [
    "automation",
    "changelog",
    "commitlint",
    "conventional-commits",
    "github-actions",
    "npm-publish",
    "semantic-release"
  ],
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "**/*.{js,yml,md}": "prettier --check",
    ".github/*": "prettier --check"
  }
}
