{
  "name": "@yasharf/semantic-auto-release",
  "version": "1.2.0",
  "description": "Automated release workflow for JavaScript/TypeScript projects using semantic-release, Conventional Commits, and changelog updates.",
  "keywords": [
    "automation",
    "changelog",
    "commitlint",
    "conventional-commits",
    "github-actions",
    "npm-publish",
    "semantic-release"
  ],
  "bin": {
    "auto-release-setup": "scripts/setup.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yasharf/semantic-auto-release.git"
  },
  "license": "BSD-3-Clause",
  "author": "Yashar Fakhari",
  "exports": {
    "./commitlint": "./commitlint.config.js",
    "./release": "./release.config.js",
    "./conventional-commits": "./.husky/commit-msg",
    "./run-release": "./scripts/run-release.sh"
  },
  "main": "index.js",
  "files": [
    "scripts/setup.js",
    ".github/workflow/lint_pr.yml",
    ".github/workflows/ci_auto_release.yml",
    ".github/workflows/semantic_auto_release.yml",
    ".husky/commit-msg",
    "commitlint.config.js",
    "release.config.js",
    "scripts/run-release.sh",
    "scripts/write-changes-md.js",
    "scripts/update-version.js",
    "plugins/export-data.js"
  ],
  "scripts": {
    "prepare": "husky",
    "prettier:check": "prettier --check **/*.{js,md,yml,sh} .github/*",
    "prettier:write": "prettier --write **/*.{js,md,yml,sh} .github/*",
    "test": "npm run test:unit && npm run test:integration",
    "test:integration": "mocha --require sinon --recursive \"test/*.integration.test.js\"",
    "test:unit": "mocha --require sinon --recursive \"test/*.test.js\" --exclude \"test/*.integration.test.js\""
  },
  "lint-staged": {
    "**/*.{js,yml,md,sh}": "prettier --check",
    ".github/*": "prettier --check"
  },
  "dependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "semantic-release": "^24.2.7"
  },
  "devDependencies": {
    "chai": "^6.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "mocha": "^11.7.1",
    "prettier": "^3.6.2",
    "prettier-plugin-sh": "^0.18.0",
    "sinon": "^21.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
